<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ffff9300" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffff4500" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffff9300" android:endColor="#ffff4500" android:angle="0.0" />
            <corners android:radius="100.0dip" />
        </shape>
    </item>
</selector>